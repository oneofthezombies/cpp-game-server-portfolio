  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Server",
      "program": "${workspaceFolder}/build/examples/rock_paper_scissors_lizard_spock/server",
      "args": ["--port", "8000"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Client Without Build",
      "program": "${workspaceFolder}/build/src/client/client",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "debugpy",
      "name": "Debug Dev",
      "request": "launch",
      "program": "dev.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["build"]
    }
  ]
}
